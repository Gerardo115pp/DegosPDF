# Mantainer: Gerardo Rodr√≠guez Sanchez <lalo.sanchez@libery-labs.com>
pkgname=degos
pkgver=0.1.0
pkgrel=1
pkgdesc="A tool to bulk convert PDFs to images"
arch=('x86_64')
url="https://github.com/Gerardo115pp/DegosPDF"
license=('GPL2')
depends=('imagemagick' 'ghostscript')
makedepends=('go')
source=("$pkgname-$pkgver.tar.gz::https://github.com/Gerardo115pp/DegosPDF/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('115ea8d70d4035698507c740b50aa0e9ee176a0dffbdb811f530d66b1d47abd4')

build() {
  cd "$srcdir/DegosPDF-$pkgver/src"
  go mod download
  go build -o degos
}

package() {
    cd "$srcdir/DegosPDF-$pkgver/src"
    install -Dm755 degos "$pkgdir/usr/bin/degos"
}